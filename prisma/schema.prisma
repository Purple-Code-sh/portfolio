
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("PRISMA_DATABASE_URL")
  directUrl = env("POSTGRES_URL") 
}

model Landing {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  imagePreview String
  htmlSrc      String
  technologies String[]
  description  String
}

model Project {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  description      String   @db.Text
  responsibilities String[] 
  teams            String[]
  imagePreview     String
  technologies     String[]
  scope            String
  site_url         String?
}